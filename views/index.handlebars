<div class="container" style="display: flex;">
  <div>
    <h2>Burgers that ARE NOT devoured</h2>
    <div class="card" style="width: 18rem;">
      <img src="/assets/images/burger.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Add A Burger</h5>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>

  <div>
    <h2>Burgers that ARE devoured!</h2>
    <div class="card" style="width: 18rem;">
      <img src="/assets/images/devoured.jpg" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">Add A Burger</h5>
         <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>

      </div>
    </div>

   
  </div>
</div>
</div>




<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
 Add A Tasty Burger
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Want to Add a Burger</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>
      <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add Burger</button>
         <button type="submit">Add Burger</button>
      </div>
    </div>
  </div>
</div>
  

 
</form>
</div>
</div>